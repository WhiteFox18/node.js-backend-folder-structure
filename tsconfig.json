{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "resolveJsonModule": false
  },
  "exclude": ["./dist", "./node_modules"],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    },
  }
}
